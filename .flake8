[flake8]
filename = *.py,*.pyx,*.pxd
max-line-length = 100
ignore =
    E125,E121,E266,
    # print is allowed
    T001, T003
exclude =
    .git
    # __pycache__
    __pycache__
    # virtual environment
    .venv/
    venv/
    env/
    build/
    *__init__.py
max_complexity = 10
statistics = true
